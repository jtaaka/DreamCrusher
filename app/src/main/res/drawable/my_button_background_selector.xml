<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="true" >
    <shape>
        <gradient
            android:startColor="#198a51"
            android:endColor="#044926"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#222222" />
        <corners
            android:radius="7dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
<item android:state_enabled="false">
    <shape>
        <gradient
            android:startColor="#cccccc"
            android:endColor="#b8b8b8"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#b8b8b8" />
        <corners
            android:radius="7dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>